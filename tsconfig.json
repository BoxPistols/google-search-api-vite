{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  // 除外
  "exclude": [
    "./node_modules",
    "./dist",
    "./build",
    "./.vscode",
    "./.github",
    "./.husky",
    "./.vscode",
    "./.yarn",
    "./.yarnrc",
    "./.yarnrc.yml",
    "./.yarn-integrity",
    "./.yarn-metadata.json",
    "./.yarn-tarball.tgz",
  ]
}